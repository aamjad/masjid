<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for TV -->
    <style name="Theme.MAPChromecastStream" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@android:color/black</item>
        
        <!-- TV-specific optimizations -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        
        <!-- Remove action bar for full-screen experience -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen theme for immersive TV experience -->
    <style name="Theme.MAPChromecastStream.Fullscreen" parent="Theme.MAPChromecastStream">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        

    </style>
</resources>
